---
interface Props {
    allImportance: { level: number; count: number }[];
    allTags: { name: string; count: number }[];
}

const { allImportance, allTags } = Astro.props;
---

<aside class="notes-filter">
    <div class="filter-section">
        <h3>‚≠ê ÈáçË¶ÅÊÄß</h3>
        <div class="filter-options">
            {
                allImportance.map(({ level, count }) => (
                    <label class="filter-option">
                        <input
                            type="checkbox"
                            name="importance"
                            value={level}
                            data-filter-type="importance"
                        />
                        <span class="filter-label">
                            <span class="importance-stars">
                                {Array.from({ length: level }).map(() => (
                                    <span class="fire-icon">üî•</span>
                                ))}
                            </span>
                            <span class="filter-count">({count})</span>
                        </span>
                    </label>
                ))
            }
        </div>
    </div>

    <div class="filter-section">
        <h3>üè∑Ô∏è ÂÖ®ÈÉ®Ê†áÁ≠æ</h3>
        <div class="filter-options">
            {
                allTags.map(({ name, count }) => (
                    <label class="filter-option">
                        <input
                            type="checkbox"
                            name="tag"
                            value={name}
                            data-filter-type="tag"
                        />
                        <span class="filter-label">
                            <span>{name}</span>
                            <span class="filter-count">({count})</span>
                        </span>
                    </label>
                ))
            }
        </div>
    </div>

    <button class="clear-filters" id="clearFilters">Ê∏ÖÈô§Á≠õÈÄâ</button>
</aside>

<style>
    .notes-filter {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: sticky;
        top: calc(var(--header-height) + 1rem);
        height: fit-content;
        max-height: calc(100vh - var(--header-height) - 2rem);
        overflow-y: auto;
        padding: 1rem;
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
    }

    /* Custom Scrollbar */
    .notes-filter::-webkit-scrollbar {
        width: 4px;
    }

    .notes-filter::-webkit-scrollbar-track {
        background: transparent;
    }

    .notes-filter::-webkit-scrollbar-thumb {
        background-color: var(--color-border);
        border-radius: 4px;
    }

    .filter-section h3 {
        font-size: 1rem;
        margin: 0 0 0.5rem 0;
        color: var(--color-text);
    }

    .filter-options {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .filter-option {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        padding: 0.25rem 0.5rem;
        border-radius: 0.5rem;
        transition: all 0.2s;
    }

    .filter-option.disabled {
        opacity: 0.5;
        pointer-events: none;
    }

    .filter-option.disabled {
        opacity: 0.5;
        pointer-events: none;
    }

    .filter-option:hover {
        background-color: rgba(var(--color-primary-rgb, 59, 130, 246), 0.08);
        transform: translateX(2px);
    }

    @keyframes flame-dance {
        0%,
        100% {
            transform: scale(1) rotate(0deg);
        }
        25% {
            transform: scale(1.08) rotate(-2deg);
        }
        50% {
            transform: scale(1.04) rotate(2deg);
        }
        75% {
            transform: scale(1.1) rotate(-1deg);
        }
    }

    .fire-icon {
        display: inline-block;
        transform-origin: center bottom;
        transition: transform 0.3s ease;
    }

    .filter-option:hover .fire-icon {
        animation: flame-dance 1.5s infinite ease-in-out;
    }

    .filter-option:hover .fire-icon:nth-child(odd) {
        animation-duration: 1.6s;
    }

    .filter-option:hover .fire-icon:nth-child(even) {
        animation-duration: 1.4s;
        animation-delay: 0.2s;
    }

    .filter-option:has(input:checked) {
        background-color: rgba(var(--color-primary-rgb, 59, 130, 246), 0.1);
    }

    .filter-option input[type="checkbox"] {
        cursor: pointer;
        width: 16px;
        height: 16px;
        accent-color: var(--color-primary);
    }

    .filter-option:has(input:checked) .filter-label {
        color: var(--color-primary);
        font-weight: 500;
    }

    .filter-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex: 1;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .importance-stars {
        font-size: 0.85rem;
    }

    .filter-count {
        font-size: 0.8rem;
        color: var(--color-text-secondary);
        transition: color 0.2s;
    }

    .filter-option:has(input:checked) .filter-count {
        color: var(--color-primary);
    }

    .clear-filters {
        padding: 0.75rem;
        background: var(--color-bg);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        color: var(--color-text);
        cursor: pointer;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .clear-filters:hover {
        background: var(--color-primary);
        color: white;
        border-color: var(--color-primary);
    }

    @media (max-width: 768px) {
        .notes-filter {
            position: static;
            max-height: none;
        }
    }
</style>
