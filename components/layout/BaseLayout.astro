---
const { title = "My Site", description = "A new Astro site" } = Astro.props;
import SEOHead from "../meta/SEOHead.astro";
import "../../styles/global.css";
import SearchModal from "../common/SearchModal.astro";
import { siteConfig } from "@config/site";
import { ViewTransitions } from "astro:transitions";
---

<html lang="zh-CN" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <ViewTransitions />
    <SEOHead title={title} description={description} />
  </head>
  <body>
    <header class="site-header" transition:persist>
      <div class="container header-content">
        <a href="/" class="logo">
          <div class="logo-icon">
            <img src={siteConfig.avatar} alt="Logo" width="32" height="32" />
          </div>
          <span class="logo-text">{siteConfig.title}</span>
        </a>
        <div class="header-right">
          <nav class="nav">
            {
              siteConfig.nav.map(item => (
                <a href={item.href} class="nav-link" data-href={item.href}>
                  {item.name}
                </a>
              ))
            }
          </nav>
          <button
            class="search-toggle"
            onclick="window.openSearchModal()"
            aria-label="搜索"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><circle cx="11" cy="11" r="8"></circle><line
                x1="21"
                y1="21"
                x2="16.65"
                y2="16.65"></line></svg
            >
            <span class="search-placeholder">Ctrl+K 搜索...</span>
          </button>
          <button class="theme-toggle" id="theme-toggle" aria-label="切换主题">
            <svg
              class="sun-icon"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="5"></circle>
              <line x1="12" y1="1" x2="12" y2="3"></line>
              <line x1="12" y1="21" x2="12" y2="23"></line>
              <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
              <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
              <line x1="1" y1="12" x2="3" y2="12"></line>
              <line x1="21" y1="12" x2="23" y2="12"></line>
              <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
              <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
            </svg>
            <svg
              class="moon-icon"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
        </div>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container footer-content">
        <p>
          &copy; {new Date().getFullYear()}
          <b>{siteConfig.footer.copyright}</b> All rights reserved.
        </p>
        <div class="footer-links">
          {
            siteConfig.social.map(link => (
              <a href={link.href} target="_blank" rel="noopener">
                {link.name}
              </a>
            ))
          }
        </div>
      </div>
    </footer>

    <script>
      import { getPlatform } from "@theme/lib/utils";
      import NProgress from "nprogress";
      import "nprogress/nprogress.css";

      NProgress.configure({ showSpinner: false });

      document.addEventListener("astro:before-preparation", () => {
        NProgress.start();
      });

      document.addEventListener("astro:after-swap", () => {
        // 可以在这里处理一些 DOM 恢复工作
      });

      document.addEventListener("astro:page-load", () => {
        NProgress.done();

        // 更新导航栏高亮
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll(".nav-link");
        navLinks.forEach(link => {
          const href = link.getAttribute("data-href");
          link.classList.remove("active");
          if (
            href &&
            (href === currentPath ||
              (href !== "/" && currentPath.startsWith(href)))
          ) {
            link.classList.add("active");
          }
        });

        // 主题切换
        const toggle = document.getElementById("theme-toggle");
        const html = document.documentElement;

        // 初始化主题
        const savedTheme = localStorage.getItem("theme") || "dark";
        // 只有当属性不存在时才设置，避免覆盖
        if (!html.hasAttribute("data-theme")) {
          html.setAttribute("data-theme", savedTheme);
        }

        toggle?.addEventListener("click", () => {
          const currentTheme = html.getAttribute("data-theme");
          const newTheme = currentTheme === "dark" ? "light" : "dark";
          html.setAttribute("data-theme", newTheme);
          localStorage.setItem("theme", newTheme);
        });

        // 搜索快捷键提示
        const searchPlaceholder = document.querySelector(".search-placeholder");
        if (searchPlaceholder) {
          searchPlaceholder.textContent =
            getPlatform() === "mac" ? "Cmd+K 搜索..." : "Ctrl+K 搜索...";
        }
      });
    </script>
    <SearchModal />
  </body>
</html>

<style>
  /* Header 样式 */
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    backdrop-filter: blur(10px);
  }

  [data-theme="dark"] .site-header {
    background: rgba(0, 0, 0, 0.8);
  }

  [data-theme="light"] .site-header {
    background: rgba(255, 255, 255, 0.8);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  /* Logo - 极客风格 */
  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--color-text);
    text-decoration: none;
    font-family: var(--font-mono);
    transition: opacity var(--transition-fast);
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-icon img {
    border-radius: 6px;
    background-color: #fff;
    /* transform: scale(-1) rotateX(180deg); */
  }

  .logo-text {
    font-size: 1.125rem;
    font-weight: 500;
    letter-spacing: -0.5px;
    color: var(--color-text);
  }

  /* Navigation */
  .nav {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .nav-link {
    color: var(--color-text-secondary);
    font-weight: 400;
    font-size: 0.9375rem;
    padding: 6px 12px;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  /* Navigation Active State */
  .nav-link.active {
    color: var(--color-primary);
    font-weight: 600;
    position: relative;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-primary);
    border-radius: 2px;
  }

  /* 主题切换按钮 - 只有图标动画 */
  .theme-toggle,
  .search-toggle {
    height: 36px;
    border: none;
    background: transparent;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
    padding: 0;
  }

  .theme-toggle {
    width: 36px;
  }

  .search-toggle {
    width: auto;
    min-width: 36px;
    padding: 0 8px;
  }

  .search-placeholder {
    max-width: 0;
    opacity: 0;
    overflow: hidden;
    white-space: nowrap;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    margin-left: 0;
  }

  .search-toggle:hover .search-placeholder {
    max-width: 100px;
    opacity: 1;
    margin-left: 6px;
  }

  .theme-toggle:hover,
  .search-toggle:hover {
    color: var(--color-primary);
  }

  .theme-toggle svg {
    transition: transform var(--transition-normal);
  }

  .theme-toggle:hover svg {
    transform: rotate(15deg);
  }

  .sun-icon {
    display: none;
  }

  .moon-icon {
    display: block;
  }

  [data-theme="light"] .sun-icon {
    display: block;
  }

  [data-theme="light"] .moon-icon {
    display: none;
  }

  /* Footer */
  .site-footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-lg) 0;
    margin-top: var(--spacing-xl);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .footer-content b {
    font-family: var(--font-mono);
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: var(--spacing-md);
  }

  .footer-links a {
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }

  /* 响应式 */
  @media (max-width: 768px) {
    .logo-text {
      display: none;
    }

    .header-right {
      gap: var(--spacing-sm);
    }

    .nav {
      gap: 4px;
    }

    .nav-link {
      padding: 4px 8px;
      font-size: 0.875rem;
    }

    .footer-content {
      flex-direction: column;
      gap: var(--spacing-sm);
      text-align: center;
    }
  }
</style>
