---
import type { IBlog } from "@theme/types";

interface Props {
  post: IBlog;
}

const { post } = Astro.props;
const slug = post.data.slug || post.slug;

function getExcerpt(content: string, length: number = 100) {
  if (!content) return "";
  const plainText = content
    .replace(/^#+\s+/gm, "") // Remove headers
    .replace(/!\[.*?\]\(.*?\)/g, "") // Remove images
    .replace(/\[(.*?)\]\(.*?\)/g, "$1") // Remove links
    .replace(/(\*\*|__)(.*?)\1/g, "$2") // Remove bold
    .replace(/(\*|_)(.*?)\1/g, "$2") // Remove italic
    .replace(/`{3}[\s\S]*?`{3}/g, "") // Remove code blocks
    .replace(/`(.+?)`/g, "$1") // Remove inline code
    .replace(/^>\s+/gm, "") // Remove blockquotes
    .replace(/<[^>]*>/g, "") // Remove HTML tags
    .replace(/\s+/g, " ") // Collapse whitespace
    .trim();

  if (plainText.length <= length) return plainText;
  return plainText.slice(0, length) + "...";
}

const description = post.data.description || getExcerpt(post.body, 80);
---

<a href={`/blog/${slug}`} class="blog-card">
  <div class="blog-card-header">
    <h3 class="blog-card-title">
      {post.data.title}
    </h3>
    <span class="blog-card-date">{post.data.date}</span>
  </div>
  <p class="blog-card-desc">{description}</p>
  <div class="blog-card-tags">
    {post.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
  </div>
</a>

<style>
  .blog-card {
    display: block;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    transition: all var(--transition-fast);
    text-decoration: none;
    color: inherit;
  }

  .blog-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px var(--color-shadow);
  }

  .blog-card:hover .blog-card-title {
    color: var(--color-primary);
  }

  .blog-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .blog-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    flex: 1;
    transition: color var(--transition-fast);
  }

  .blog-card-date {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
    margin-top: 4px;
  }

  .blog-card-desc {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-sm);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .tag {
    font-size: 0.75rem;
    padding: 2px 8px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
  }
</style>
